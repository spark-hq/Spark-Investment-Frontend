# ===================================
# Spark Investment AI - Environment Configuration Template
# ===================================
# Copy this file to .env and update the values as needed

# -------------------------
# API Configuration
# -------------------------
VITE_API_BASE_URL=http://localhost:5000/api
VITE_WEBSOCKET_URL=ws://localhost:5000

# -------------------------
# MOCK MODE (Default: true - No backend yet)
# -------------------------
# Set to 'true' to use mock data (for development without backend)
# Set to 'false' to use real API calls (when backend is ready)
VITE_MOCK_MODE=true

# -------------------------
# Application Settings
# -------------------------
VITE_APP_NAME=Spark Investment AI
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# -------------------------
# Trading Safety Settings
# -------------------------
VITE_MAX_TRADE_AMOUNT=100000
VITE_ENABLE_PAPER_TRADING=true
VITE_REQUIRE_2FA_FOR_TRADES=false

# -------------------------
# AI Settings
# -------------------------
VITE_AI_MODEL=gpt-4
VITE_ENABLE_AI_SUGGESTIONS=true

# -------------------------
# Debug Settings
# -------------------------
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info
