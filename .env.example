# ===================================
# Spark Investment Frontend - Environment Configuration Example
# ===================================
# Copy this file to .env and configure for your environment

# API Configuration
# Backend API base URL
VITE_API_BASE_URL=http://localhost:5000/api

# Mock Mode Configuration
# General mock mode - affects portfolio, investments, market data, AI, etc.
# Set to 'true' to use mock data for all features (except auth if AUTH_MOCK_MODE=false)
# Set to 'false' to connect to real backend for all features
VITE_MOCK_MODE=true

# Authentication Mock Mode - SEPARATE control for auth endpoints only
# Set to 'false' to use real backend for signup/login (recommended when backend auth is ready)
# Set to 'true' to use mock authentication
VITE_AUTH_MOCK_MODE=false

# WebSocket Configuration (optional)
VITE_WEBSOCKET_URL=ws://localhost:5000

# Debug Mode - Enable detailed API logging
VITE_DEBUG_MODE=false
